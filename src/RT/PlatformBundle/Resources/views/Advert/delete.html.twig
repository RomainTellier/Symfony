{% extends "RTPlatformBundle::layout.html.twig" %}

{% block title %}
    Supprimer un thème - {{ parent() }}
{% endblock %}

{% block rtplatform_body %}

    <h2>Supprimer un thème</h2>

    <p>
        Etes-vous certain de vouloir supprimer le thème "{{ theme.titre }}" ?
    </p>

    {# On met l'id de l'annonce dans la route de l'action du formulaire #}
    <form action="{{ path('rt_platform_delete', {'id': theme.id}) }}" method="post">
        <a href="{{ path('rt_platform_view', {'id': theme.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour au thème
        </a>
        {# Ici j'ai écrit le bouton de soumission à la main #}
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        {# Ceci va générer le champ CSRF #}
        {{ form_rest(form) }}
    </form>

{% endblock %}